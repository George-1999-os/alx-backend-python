pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // This will checkout whichever branch triggered the build
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                sh '''
                if [ -f requirements.txt ]; then
                    pip install -r requirements.txt
                elif [ -f messaging_app/requirements.txt ]; then
                    pip install -r messaging_app/requirements.txt
                else
                    echo "No requirements.txt found"
                fi
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                pytest --maxfail=5 --disable-warnings -q --junitxml=report.xml || true
                '''
            }
        }

        stage('Archive Results') {
            steps {
                junit 'report.xml'
            }
        }
    }
}
