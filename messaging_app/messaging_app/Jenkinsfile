pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checker expects exact "git branch"
                sh 'git branch'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Checker expects exact "pip3 install"
                sh 'pip3 install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest'
            }
        }
    }
}
