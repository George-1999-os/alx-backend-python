pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                // Credentials check: show git branch
                sh 'git branch'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'pip install --upgrade pip'
                sh 'pip install -r messaging_app/requirements.txt'
                sh 'pip install pep8 pytest'
            }
        }

        stage('PEP8 check') {
            steps {
                sh 'pep8 messaging_app/'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest --maxfail=1 --disable-warnings -q --junitxml=report.xml'
            }
        }
    }

    post {
        always {
            junit 'report.xml'
        }
    }
}
