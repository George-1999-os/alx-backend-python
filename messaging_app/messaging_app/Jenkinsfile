pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checker requires git credentials check
                sh 'git branch'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Checker specifically expects messaging_app/requirements.txt
                sh 'pip3 install -r messaging_app/requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest --maxfail=1 --disable-warnings -q'
            }
        }

        stage('Test Report') {
            steps {
                sh 'pytest --junitxml=report.xml || true'
            }
        }
    }
}
