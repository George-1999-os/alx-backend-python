pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Pull code from your GitHub repo
                git branch: 'main',
                    url: 'https://github.com/George-1999-os/alx-backend-python.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('messaging_app') {
                    sh 'pip install -r requirements.txt'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('messaging_app') {
                    // Run pytest with JUnit report
                    sh 'pytest --junitxml=report.xml'
                }
            }
            post {
                always {
                    junit 'messaging_app/report.xml'
                }
            }
        }
    }
}
